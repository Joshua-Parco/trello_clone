<h1><%= @task.id ? 'Edit task' : 'Create task' %></h1>
<hr />
<%= form_with(model: [@list, @task], local: true, class: "ui form") do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br />
  <%= f.submit nil, class: "ui button" %>
<% end %>
